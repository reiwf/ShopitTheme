[
  {
    "name": "主题信息",
    "theme_name": "Rise - 极简主义",
    "theme_version": "1.0.0",
    "theme_author": "Cursor",
    "theme_documentation_url": "",
    "theme_support_url": ""
  },
  {
    "name": "颜色",
    "settings": [
      {
        "type": "color",
        "id": "background",
        "label": "背景色",
        "default": "#FFFFFF"
      },
      {
        "type": "color",
        "id": "text_color",
        "label": "文本颜色",
        "default": "#333333"
      },
      {
        "type": "color",
        "id": "accent_color",
        "label": "强调色",
        "default": "#F5F5F5"
      }
    ]
  },
  {
    "name": "排版",
    "settings": [
      {
        "type": "font_picker",
        "id": "heading_font",
        "label": "标题字体",
        "default": "helvetica_n4"
      },
      {
        "type": "font_picker",
        "id": "body_font",
        "label": "正文字体",
        "default": "helvetica_n4"
      },
      {
        "type": "range",
        "id": "base_font_size",
        "label": "基础字体大小",
        "default": 16,
        "min": 14,
        "max": 18,
        "step": 1,
        "unit": "px"
      }
    ]
  },
  {
    "name": "布局",
    "settings": [
      {
        "type": "range",
        "id": "spacing_scale",
        "label": "间距比例",
        "default": 1,
        "min": 0.8,
        "max": 1.4,
        "step": 0.1
      },
      {
        "type": "checkbox",
        "id": "enable_animations",
        "label": "启用过渡动画",
        "default": true
      }
    ]
  }
]
